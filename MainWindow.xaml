<Window x:Class="u3Toppings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:u3Toppings"
        mc:Ignorable="d"
        Title="pizzaz pizzaz Ordering Systeminator 3000" Height="350" Width="525">
    <StackPanel>
        <TextBox AcceptsReturn="False" TextWrapping="NoWrap" x:Name="txtInput"/>
        <Button x:Name="btnAdd" Click="btnAdd_Click" Content="Add a Topping"/>
        <Button x:Name="btnDone" Click="btnDone_Click" Content="Show Toppings"/>
    </StackPanel>
</Window>
